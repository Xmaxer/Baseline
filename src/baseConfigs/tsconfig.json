{
  "compilerOptions": {
    "baseUrl": "../../../",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "noEmit": true,
    "rootDir": "../../../",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["../../../src/**/*.*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
