{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "dist/baseline",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
